<Window x:Class="WPF_SQL_NET_Framework.View.EF.EF_Conn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SQL_NET_Framework.View.EF"
        xmlns:vm="clr-namespace:WPF_SQL_NET_Framework.ViewModel"
        mc:Ignorable="d"
        Title="EF_Conn" Height="450" Width="800">

    <!--<Window.DataContext>
        <vm:Main_ViewModel/>
    </Window.DataContext>-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <GroupBox Grid.Column="0" Grid.Row="0" Header="Control">
                <ItemsControl Margin="5" ItemsSource="{Binding DB_EF_Info}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Margin="2" Content="EF Name: "/>
                                <TextBox Grid.Row="0" Grid.Column="1" Margin="2" Text="{Binding EF_Name}"/>
                                <Label Grid.Row="1" Grid.Column="0" Margin="2" Content="EF ID: "/>
                                <TextBox Grid.Row="1" Grid.Column="1" Margin="2" Text="{Binding EF_ID}"/>
                                <Label Grid.Row="2" Grid.Column="0" Margin="2" Content="EF PW: "/>
                                <TextBox Grid.Row="2" Grid.Column="1" Margin="2" Text="{Binding EF_PW}"/>
                                <Label Grid.Row="3" Grid.Column="0" Margin="2" Content="EF Admin: "/>
                                <CheckBox Grid.Row="3" Grid.Column="1" Margin="2" Content="Admin" IsChecked="{Binding EF_Admin, Mode=TwoWay}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>

            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Margin="4" Content="C(Create)" Command="{Binding EF_Create}" IsEnabled="False"/>
                <Button Grid.Column="1" Margin="4" Content="R(Read)" Command="{Binding EF_Read}"/>
                <Button Grid.Column="2" Margin="4" Content="U(Update)" Command="{Binding EF_Update}" IsEnabled="False"/>
                <Button Grid.Column="3" Margin="4" Content="D(Delete)" Command="{Binding EF_Delete}" IsEnabled="False"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding EF_RcvTable}" SelectedItem="{Binding EF_SelectTable}"/>
        </Grid>
    </Grid>
</Window>
